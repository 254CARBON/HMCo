{
  "name": "02-fred-daily",
  "description": "FRED daily economic indicators pipeline",
  "schedule": "0 30 * * *",
  "timezone": "America/New_York",
  "tasks": [
    {
      "name": "compile_uis",
      "type": "SHELL",
      "command": "python /app/sdk/uis/compilers/seatunnel/compiler.py --spec /app/sdk/uis/compilers/seatunnel/fixtures/fred_daily.json --output /tmp/fred_daily_job.conf"
    },
    {
      "name": "run_ingestion",
      "type": "SEATUNNEL",
      "config": "/tmp/fred_daily_job.conf",
      "dependsOn": ["compile_uis"]
    },
    {
      "name": "data_quality",
      "type": "PYTHON",
      "script": "/app/data-quality/runner.py",
      "args": ["--suite", "fred_daily", "--table", "hub_curated.fred_daily"],
      "dependsOn": ["run_ingestion"]
    },
    {
      "name": "publish",
      "type": "SHELL",
      "command": "echo 'FRED daily pipeline completed successfully'",
      "dependsOn": ["data_quality"]
    }
  ],
  "sla": {
    "freshness_minutes": 30,
    "alert": {
      "enabled": true,
      "channel": "slack-data-platform",
      "recipients": ["data-eng@254carbon.com"]
    }
  }
}
